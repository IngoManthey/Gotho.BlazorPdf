                @* <MudMenuItem Icon="@Config.Icons.DownloadDocument" Label="@Config.Labels.DownloadDocument" OnClick="DownloadDocumentAsync"/> *@
            </MudMenu>
        </MudToolBar>
        @if (Loading)
